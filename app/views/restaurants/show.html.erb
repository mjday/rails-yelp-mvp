<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<h1>Reviews</h1>

    <% @reviews.each do |review| %>
        <p><%= review.rating %></p>
        <p><%= review.content %></p>
    <% end %>

    <%= render 'reviews/new' %>

<%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-warning" %>
